<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">グラフ</h3>
  </div>
  <div class="panel-body">
    <%= line_chart( @graph, min: @min_weight-1, max: @max_weight+1 ) %>
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Profile ID</th>
            <th>体重 [kg]</th>
            <th>日付</th>
          </tr>
        </thead>

        <tbody>
          <%= content_tag_for(:tr, @weights) do |weight| %>
          <td><%= weight.profile_id %></td>
          <td><%= weight.weight %></td>
          <td><%= weight.diary_date %></td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
